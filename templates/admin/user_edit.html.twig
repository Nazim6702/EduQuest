{% extends 'base.html.twig' %}

{% block title %}Modifier utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/user-edit.css') }}">
{% endblock %}

{% block body %}
    <div class="user-edit-container">
        <h1>Modifier l’utilisateur : {{ user.pseudo }}</h1>

        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.pseudo) }}
            {{ form_row(form.password) }}
            <button type="submit">Enregistrer</button>
        {{ form_end(form) }}

        <a href="{{ path('admin_user_list') }}" class="back-link">← Retour à la liste</a>
    </div>
{% endblock %}
