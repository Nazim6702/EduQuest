{% extends 'base.html.twig' %}
{% block title %}Résultat{% endblock %}
{% block body %}
    <section style="text-align:center; padding:40px;">
        {% if status == 'correct' %}
            ✅ Bonne réponse
        {% elseif status == 'wrong' %}
            ❌ Mauvaise réponse
        {% elseif status == 'timeout' %}
            ⏰ Temps écoulé
        {% else %}
            ⏳ Non répondu
        {% endif %}

        {% if isLast %}
            <a href="{{ path('app_quiz_results', { id: quizId }) }}" class="btn">Voir les résultats</a>
        {% else %}
            <a href="{{ path('app_quiz_play', { id: quizId, step: nextStep }) }}" class="btn">Question suivante</a>
        {% endif %}
    </section>
    <style>
        .recap-item.timeout {
            border-color: #ffa000;
            background: #fff8e1;
        }
    </style>
{% endblock %}
