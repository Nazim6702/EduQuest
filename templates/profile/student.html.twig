{% extends 'base.html.twig' %}

{% block title %}Profil Étudiant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="welcome-header">
            <img src="/images/avatar-etudiant.png" alt="avatar étudiant" class="welcome-image">
            <h1>Bienvenue, {{ app.user.name }}</h1>
        </div>

        <div class="profile-edit-link">
            <a href="{{ path('app_profile_edit') }}">Modifier mes informations</a>
        </div>

        <div class="info-box">
            <h3>Informations personnelles</h3>
            <div style="text-align: left;">
                <p><strong>Email :</strong> {{ app.user.email }}</p>
                <p><strong>Pseudo :</strong> {{ app.user.pseudo }}</p>
                <p><strong>Nom :</strong> {{ app.user.name }}</p>
            </div>
        </div>

        <div class="features-box">
            <h3>Fonctionnalités Étudiant</h3>
            <ul>
                <li><a href="{{ path('app_quiz_explorer') }}">Participer aux quiz</a></li>
                <li><a href="#">Participer aux débats</a></li>
                <li><a href="#">Voir ma progression</a></li>
            </ul>
        </div>

        <a href="{{ path('app_logout') }}" class="logout-btn">Se déconnecter</a>
    </div>
{% endblock %}
