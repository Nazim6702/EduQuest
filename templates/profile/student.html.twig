{% extends 'base.html.twig' %}

{% block title %}Profil Étudiant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@800&display=swap" rel="stylesheet">
    <style>
    .welcome-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
}

.welcome-header img.welcome-image {
    width: 90px;
    height: 90px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 0 0 5px white;
}

.welcome-header h1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 48px;
    font-weight: 800;
    color: #ff9800;
    -webkit-text-stroke: 1px white;
    text-stroke: 1px white;
    margin: 0;
}

        /* Fond bleu pour la page entière */
        body {
            background-color: #3949ab;
            padding: 0;
            margin: 0;
            font-family: Arial, sans-serif;
            overflow-x: hidden;
        }

        .student-profile {
            max-width: 100%;
            margin: 60px auto;
            background-color: transparent;
            color: #333;
            padding: 0;
        }

        /* Titre Bienvenue */
        .student-profile h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 48px;
            font-weight: 800;
            color: #ff9800;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 30px;
            -webkit-text-stroke: 1px white;
            text-stroke: 1px white;
        }

        .logout-btn {
            display: block;
            background-color: #ff9800;
            color: white;
            text-align: center;
            padding: 12px 20px;
            border-radius: 10px;
            font-weight: bold;
            text-decoration: none;
            box-shadow: 4px 4px 0px black;
            transition: transform 0.2s;
            margin-top: 40px;
            width: 200px;
            margin-left: auto;
            margin-right: auto;
        }

        .logout-btn:hover {
            background-color: #e68900;
            transform: scale(1.15);
        }

        /* Infos perso */
        .info-box {
            background-color: #f9fafc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
            width: 100%;
        }

        .info-box h3 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            color: #3949ab;
            font-size: 24px;
            margin-bottom: 20px;
            -webkit-text-stroke: 0.5px white;
        }

        .student-profile p {
            font-size: 18px;
            margin: 10px 0;
        }

        .student-profile p strong {
            color: #ff9800;
        }

        /* Fonctionnalités étudiant */
        .features-box {
            background-color: #f9fafc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .features-box h3 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            color: #3949ab;
            font-size: 24px;
            margin-bottom: 20px;
            -webkit-text-stroke: 0.5px white;
        }

        .student-profile ul {
            list-style: none;
            padding: 0;
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-bottom: 30px;
            flex-direction: row;
        }

        .student-profile ul li a {
            display: inline-block;
            background-color: #ff9800;
            color: white;
            text-decoration: none;
            padding: 12px 20px;
            font-weight: bold;
            border-radius: 30px;
            box-shadow: 4px 4px 0px black;
            transition: transform 0.2s;
            text-align: center;
        }

        .student-profile ul li a:hover {
            background-color: #e68900;
            transform: scale(1.05);
        }
    </style>
{% endblock %}


{% block body %}
<div class="student-profile">
    <!-- Titre centré avec le nom - Hors de l'encadré -->
    <div class="welcome-header">
    <img src="/images/avatar-etudiant.png" alt="avatar étudiant" class="welcome-image">
    <h1>Bienvenue, {{ app.user.name }}</h1>
</div>

    <!-- Encadré pour les informations personnelles -->
    <div class="info-box">
        <h3>Informations personnelles</h3>
        <div style="text-align: left;">
            <p><strong>Email :</strong> {{ app.user.email }}</p>
            <p><strong>Pseudo :</strong> {{ app.user.pseudo }}</p>
            <p><strong>Nom :</strong> {{ app.user.name }}</p>
        </div>
    </div>

    <!-- Encadré pour les fonctionnalités étudiantes -->
    <div class="features-box">
        <h3>Fonctionnalités Étudiant</h3>
        <ul>
            <li><a href="#">Participer aux quiz</a></li>
            <li><a href="#">Participer aux débats</a></li>
            <li><a href="#">Voir ma progression</a></li>
        </ul>
    </div>

    <!-- Bouton de déconnexion - Hors de l'encadré -->
    <a href="{{ path('app_logout') }}" class="logout-btn">Se déconnecter</a>
</div>
{% endblock %}
