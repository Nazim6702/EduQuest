{% extends 'base.html.twig' %}

{% block title %}Profil Enseignant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="welcome-header">
            <h1>Bienvenue, {{ app.user.name }}</h1>
        </div>

        <div style="text-align: center; margin-bottom: 30px;">
            <a href="{{ path('app_profile_edit') }}" class="profile-action-button">
                ✏️ Modifier mes informations
            </a>
        </div>

        <div class="info-box">
            <h3>Informations personnelles</h3>
            <div style="text-align: left;">
                <p><strong>Email :</strong> {{ app.user.email }}</p>
                <p><strong>Pseudo :</strong> {{ app.user.pseudo }}</p>
                <p><strong>Nom :</strong> {{ app.user.name }}</p>
            </div>
        </div>

        <div class="features-box">
            <h3>Fonctionnalités Enseignant</h3>
            <ul>
                <li><a href="{{ path('app_create_quiz') }}">Créer des quiz</a></li>
                <li><a href="#" class="coming-soon">Lancer un débat</a></li>
                <li><a href="#" class="coming-soon">Consulter les résultats des étudiants</a></li>
            </ul>
        </div>

        <a href="{{ path('app_logout') }}" class="logout-btn">Se déconnecter</a>
    </div>
{% endblock %}
