{% extends 'base.html.twig' %}

{% block title %}EduQuest - Accueil{% endblock %}

{% block body %}
    <section class="hero">
        <div class="content">
            <h2>Le défi éducatif qui fait grandir votre savoir ! 🧠</h2>
            <div class="buttons">
                <a href="{{ path('app_register') }}" class="btn btn-inscrire">S'inscrire</a>
                <a href="{{ path('app_login') }}" class="btn btn-connecter">Se connecter</a>
            </div>
        </div>
    </section>

    <section class="new-quizzes">
        <h2>Nouveaux Quiz</h2>
        <div class="quiz-cards">
            {% for quiz in quizzes %}
                <a href="{{ path('app_play_quiz', { id: quiz.id }) }}" class="quiz-card-link">
                    <div class="quiz-card">
                        <span class="category">{{ quiz.category }}</span>
                        <h3>{{ quiz.title }}</h3>
                        <span class="date">Publié le {{ quiz.createdAt|date('d/m/Y') }}</span>
                    </div>
                </a>
            {% else %}
                <p>Aucun quiz pour le moment.</p>
            {% endfor %}
        </div>
    </section>


    <section class="quiz-themes">
        <h2>Quiz par thématique</h2>
        <div class="decorative-line"></div>
        <div class="themes-grid">
            <div class="theme">
                <span class="icon">🔬</span>
                <span class="title">Physique-Chimie</span>
            </div>
            <div class="theme">
                <span class="icon">📚</span>
                <span class="title">Histoire</span>
            </div>
            <div class="theme">
                <span class="icon">🌍</span>
                <span class="title">Géographie</span>
            </div>
            <div class="theme">
                <span class="icon">📕</span>
                <span class="title">Français</span>
            </div>
            <div class="theme">
                <span class="icon">➗</span>
                <span class="title">Maths</span>
            </div>
            <div class="theme">
                <span class="icon">🎭</span>
                <span class="title">Culture Générale</span>
            </div>
            <div class="theme">
                <span class="icon">🇬🇧</span>
                <span class="title">Anglais</span>
            </div>
            <div class="theme">
                <span class="icon">🌳</span>
                <span class="title">S.V.T</span>
            </div>
            <div class="theme">
                <span class="icon">🧠</span>
                <span class="title">Philosophie</span>
            </div>
            <div class="theme">
                <span class="icon">⚽</span>
                <span class="title">Sports</span>
            </div>
        </div>
    </section>
{% endblock %}