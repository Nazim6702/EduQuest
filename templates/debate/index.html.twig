{% extends 'base.html.twig' %}

{% block title %}Espace D√©bat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/debate.css') }}">
{% endblock %}

{% block body %}
<h1>
    <img src="{{ asset('images/bulle.jpeg') }}" alt="Bulle de discussion" class="bubble-icon">
    Espace D√©bat
</h1>



{# -- Formulaire de publication -- #}

{% if app.user %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}
{% else %}
  <p class="login-alert">
    <img src="{{ asset('images/cadenas.jpeg') }}" alt="Cadenas" class="lock-icon">
    Tu dois <a href="{{ path('app_login') }}" class="login-link">te connecter</a> pour participer √† la discussion.
</p>

{% endif %}

<hr>



{% for msg in messages %}
    <div class="message">
       <p class="author">
    {{ msg.author.email }}
    <span class="role-badge 
        {% if 'ROLE_ADMIN' in msg.author.roles %}
            admin
        {% elseif 'ROLE_TEACHER' in msg.author.roles %}
            teacher
        {% elseif 'ROLE_STUDENT' in msg.author.roles %}
            student
        {% else %}
            user
        {% endif %}
    ">
        {% if 'ROLE_ADMIN' in msg.author.roles %}
            Administrateur
        {% elseif 'ROLE_TEACHER' in msg.author.roles %}
            Enseignant
        {% elseif 'ROLE_STUDENT' in msg.author.roles %}
            √âtudiant
        {% else %}
            Utilisateur
        {% endif %}
    </span>
</p>



        <p>{{ msg.content }}</p>

        <p class="meta">
            {{ msg.createdAt|date('d/m/Y H:i') }}
            <a href="{{ path('app_debate_like', { id: msg.id }) }}" style="text-decoration: none; margin-left: 10px;">‚ù§Ô∏è {{ msg.likes }}</a>
            {% if app.user %}
                <a href="{{ path('app_debate', { replyTo: msg.id }) }}" style="text-decoration: none; margin-left: 10px;">üí¨ R√©pondre</a>
            {% endif %}
        </p>


        {% for reply in msg.replies %}
    <div class="message" style="margin-left: 30px; background: #f8f8f8;">
       <p class="author">
    {{ msg.author.email }}
    <span class="role-badge 
        {% if 'ROLE_ADMIN' in msg.author.roles %}
            admin
        {% elseif 'ROLE_TEACHER' in msg.author.roles %}
            teacher
        {% elseif 'ROLE_STUDENT' in msg.author.roles %}
            student
        {% else %}
            user
        {% endif %}
    ">
        {% if 'ROLE_ADMIN' in msg.author.roles %}
            Administrateur
        {% elseif 'ROLE_TEACHER' in msg.author.roles %}
            Enseignant
        {% elseif 'ROLE_STUDENT' in msg.author.roles %}
            √âtudiant
        {% else %}
            Utilisateur
        {% endif %}
    </span>
</p>

        <p>{{ reply.content }}</p>
        <p class="meta">
            {{ reply.createdAt|date('d/m/Y H:i') }}
            <a href="{{ path('app_debate_like', { id: reply.id }) }}" style="text-decoration: none; margin-left: 10px;">‚ù§Ô∏è {{ reply.likes }}</a>
        </p>
    </div>
{% endfor %}

    </div>
{% else %}
    <p>Aucun message pour le moment.</p>
{% endfor %}
{% endblock %}