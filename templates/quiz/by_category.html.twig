{% extends 'base.html.twig' %}

{% block title %}Quiz : {{ category }}{% endblock %}

{% block body %}
    <section class="category-quizzes">
        <div class="container">
            <h2>Quiz en {{ category }}</h2>

            <div class="quiz-grid">
                {% for quiz in pagination %}
                    <a href="{{ path('app_play_quiz', { id: quiz.id }) }}" class="quiz-card-link">
                        <div class="quiz-card">
                            <span class="category">{{ quiz.category }}</span>
                            <h3>{{ quiz.title }}</h3>
                            <span class="date">Publié le {{ quiz.createdAt|date('d/m/Y') }}</span>
                        </div>
                    </a>
                {% else %}
                    <p>Aucun quiz dans cette catégorie.</p>
                {% endfor %}
            </div>

            <div class="pagination" style="margin-top: 40px; text-align:center;">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </section>
{% endblock %}
