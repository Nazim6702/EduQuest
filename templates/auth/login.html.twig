{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="login-container">
    <h1 class="login-title">Espace EduQuest</h1>
    <div class="login-form">
        <h2>Connexion</h2>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.email, {'label': 'Email'}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password, {'label': 'Mot de passe'}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.name, {'label': 'Nom'}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.pseudo, {'label': 'Pseudo'}) }}
            </div>
            <div class="form-group">
                <label>Vous Ãªtes :</label>
                <div class="role-buttons">
                    {{ form_widget(form.userType) }}
                </div>
            </div>
            <div class="form-group">
                <button type="submit">Se connecter</button>
            </div>
        {{ form_end(form) }}

        <p class="already-account">
            Vous n'avez pas encore de compte ? 
            <a href="{{ path('app_register') }}">Inscrivez-vous ici</a>.
        </p>
    </div>
</div>
{% endblock %}
