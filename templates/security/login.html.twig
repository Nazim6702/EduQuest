{% extends 'base.html.twig' %}

{% block title %}Espace EduQuest - Connexion{% endblock %}

{% block body %}
<div class="login-container">
    <h1 class="login-title">Espace EduQuest</h1>
    <div class="login-box">
        <h2 class="login-subtitle">Connexion</h2>
        <form class="login-form" method="POST" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="email">*Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">*Mot de passe</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="login-button">
                VALIDER <span class="check-icon">✔️</span>
            </button>
        </form>
        </form>
        <p class="signup-text">Pas encore inscrit ? <a href="{{ path('app_register') }}" class="signup-link">S’inscrire</a></p>
    </div>
</div>
{% endblock %}