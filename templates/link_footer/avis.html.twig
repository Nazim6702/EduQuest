{% extends 'base.html.twig' %}

{% block title %}EduQuest - Laisser un avis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/avis.css') }}">
{% endblock %}

{% block body %}
    <section class="avis-section">
        <div class="avis-container">
            <h2>Laissez un avis</h2>

            {# Formulaire de publication #}
            <form action="{{ path('app_avis') }}" method="post">
                {{ form_start(form) }}
                    <div class="form-group">
                        <label for="name">Nom</label>
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="form-group">
                        <label for="rating">Note</label>
                        {{ form_widget(form.rating) }}
                    </div>

                    <div class="form-group">
                        <label for="message">Commentaire</label>
                        {{ form_widget(form.message) }}
                    </div>

                    <button type="submit" class="btn-submit">Envoyer</button>
                {{ form_end(form) }}
            </form>
        </div>

        {# Affichage des avis laissés #}
        <div class="avis-list">
            <h3>Les avis laissés par nos utilisateurs :</h3>
            {% for avis in messages %}
                <div class="avis-item">
                    <p><strong>{{ avis.name }}</strong> - Note : {{ avis.rating }}/5</p>
                    <p>{{ avis.message }}</p>
                    <p class="meta">{{ avis.createdAt|date('d/m/Y H:i') }}</p>
                </div>
            {% else %}
                <p>Aucun avis pour le moment.</p>
            {% endfor %}
        </div>
    </section>
{% endblock %}
